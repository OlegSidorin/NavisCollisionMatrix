<UserControl x:Class="СollisionMatrix.MatrixSelectionCellUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:СollisionMatrix"
             mc:Ignorable="d" Width="26"
             d:DesignHeight="26" d:DesignWidth="26">
    <UserControl.DataContext>
        <local:MatrixSelectionCellViewModel />
    </UserControl.DataContext>
    <Grid>
        <TextBox Text="{Binding Tolerance}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"  
                 Margin="1" Height="24"
                 VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
    </Grid>
</UserControl>
