<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style BasedOn="{StaticResource {x:Type UserControl}}" 
           TargetType="{x:Type UserControl}"
           x:Key="UserLineTheme">
        <Style.Setters>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="VerticalAlignment" Value="Top" />
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="5 0 5 0"/>
        </Style.Setters>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#f5f9f6"/>
                <Setter Property="BorderBrush" Value="#c3bfb4"/>
                <Setter Property="BorderThickness" Value="5 1 5 1"/>
            </Trigger>
        </Style.Triggers>
    </Style>
</ResourceDictionary>